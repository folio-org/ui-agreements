{
  "name": "GOKb Search",
  "version": "1.0",
  "type": {
    "name": "SASQRouteConfig",
    "version": "1.0"
  },
  "configuration": {
    "results": {
      "display": {
        "columns": [
          {
            "name": "name",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.name"
            }
          },
          {
            "name": "publicationType",
            "type": "String",
            "value": {
              "type": "Handlebars",
              "templateString": "{{{replace value 'Instance' ''}}}",
              "value": {
                "type": "access",
                "accessType": "JSONPath",
                "expression": "$.componentType"
              }
            }
          },
          {
            "name": "isbns",
            "type": "Array",
            "arrayType": "String",
            "renderStrategy": {
              "type": "joinString",
              "separator": ", "
            },
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'isbn' || @.namespace == 'eisbn' || @.namespace == 'pisbn')].value"
            }
          },
          {
            "name": "issns",
            "type": "Array",
            "arrayType": "String",
            "renderStrategy": {
              "type": "joinString",
              "separator": ", "
            },
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'issn' || @.namespace == 'eissn' || @.namespace == 'pissn')].value"
            }
          },
          {
            "name": "zdbids",
            "type": "Array",
            "arrayType": "String",
            "renderStrategy": {
              "type": "joinString",
              "separator": ", "
            },
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'zdb')].value"
            }
          },
          {
            "name": "ezbids",
            "type": "Array",
            "arrayType": "String",
            "renderStrategy": {
              "type": "joinString",
              "separator": ", "
            },
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'ezb')].value"
            }
          },
          {
            "name": "publicationDates",
            "type": "DatesDisplay"
          },
          {
            "name": "otherIds",
            "type": "Array",
            "arrayType": "String",
            "renderStrategy": {
              "type": "joinString",
              "separator": ", "
            },
            "value": {
              "type": "HandlebarsEach",
              "templateString": "{{{namespaceName}}}: {{{value}}}",
              "value": {
                "type": "access",
                "accessType": "JSONPath",
                "expression": "$.identifiers[?(@.namespace != 'issn' && @.namespace != 'eissn' && @.namespace != 'pissn' && @.namespace != 'isbn' && @.namespace != 'eisbn' && @.namespace != 'pisbn' && @.namespace != 'zdb' && @.namespace != 'ezb')]"
              }
            }
          },
          {
            "name": "publisher",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.publisherName"
            }
          },
          {
            "name": "firstAuthor",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.firstAuthor"
            }
          },
          {
            "name": "firstEditor",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.firstEditor"
            }
          },
          {
            "name": "editionStatement",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.editionStatement"
            }
          },
          {
            "name": "volume",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.volumeNumber"
            }
          },
          {
            "name": "subjects",
            "type": "Array",
            "arrayType": "String",
            "renderStrategy": {
              "type": "joinString",
              "separator": ", "
            },
            "value": {
              "type": "HandlebarsEach",
              "templateString": "{{{scheme}}}: {{{heading}}}",
              "value": {
                "type": "access",
                "accessType": "JSONPath",
                "expression": "$.subjects[*]"
              }
            }
          },
          {
            "name": "gokbid",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.id"
            }
          },
          {
            "name": "gokbuuid",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.uuid"
            }
          }
        ]
      },
      "fetch": {
        "baseUrl": "https://gokbt.gbv.de/gokb/api/find",
        "mapping": {
          "results": "records",
          "totalRecords": "count"
        },
        "search": {
          "type": "queryDropdown",
          "options": [
            {
              "name": "keyword",
              "type": "Handlebars",
              "templateString": "q={{string}}",
              "default": true
            },
            {
              "name": "nameAndAltNames",
              "type": "Handlebars",
              "templateString": "label={{string}}",
              "default": false
            },
            {
              "name": "name",
              "type": "Handlebars",
              "templateString": "name={{string}}",
              "default": false
            },
            {
              "name": "altname",
              "type": "Handlebars",
              "templateString": "altname={{string}}",
              "default": false
            },
            {
              "name": "identifiers",
              "type": "Handlebars",
              "templateString": "identifier={{string}}",
              "default": false
            },
            {
              "name": "eisbn",
              "type": "Handlebars",
              "templateString": "identifier=eisbn,{{string}}",
              "default": false
            },
            {
              "name": "isbn",
              "type": "Handlebars",
              "templateString": "identifier=isbn,{{string}}",
              "default": false
            },
            {
              "name": "eissn",
              "type": "Handlebars",
              "templateString": "identifier=eissn,{{string}}",
              "default": false
            },
            {
              "name": "issn",
              "type": "Handlebars",
              "templateString": "identifier=issn,{{string}}",
              "default": false
            },
            {
              "name": "ezb",
              "type": "Handlebars",
              "templateString": "identifier=ezb,{{string}}",
              "default": false
            },
            {
              "name": "zdb",
              "type": "Handlebars",
              "templateString": "identifier=zdb,{{string}}",
              "default": false
            },
            {
              "name": "uuid",
              "type": "Handlebars",
              "templateString": "uuid={{string}}",
              "default": false
            },
            {
              "name": "gokbId",
              "type": "Handlebars",
              "templateString": "id={{string}}",
              "default": false
            },
            {
              "name": "authorEditor",
              "type": "Handlebars",
              "templateString": "q={{string}}&qfields=firstAuthor&qfields=firstEditor",
              "default": false
            }
          ]
        },
        "filters": [
          {
            "name": "type",
            "filterPath": "componentType",
            "type": "singleSelect",
            "enumValues": [
              {
                "name": "all",
                "value": "Title",
                "default": false
              },
              {
                "name": "book",
                "value": "Book",
                "default": false
              },
              {
                "name": "database",
                "value": "Database",
                "default": false
              },
              {
                "name": "journal",
                "value": "Journal",
                "default": false
              },
              {
                "name": "other",
                "value": "Other",
                "default": false
              }
            ]
          }
        ],
        "actions": {},
        "pagination": {
          "type": "offset"
        }
      }
    },
    "view": {
      "display": {}
    }
  }
}
