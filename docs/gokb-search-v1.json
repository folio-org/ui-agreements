{
  "name": "GOKb Search",
  "version": "1.0",
  "type": {
    "name": "SASQRouteConfig",
    "version": "1.0"
  },
  "configuration": {
    "results": {
      "display": {
        "columns": [
          {
            "name": "name",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.name"
            }
          },
          {
            "name": "publicationType",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.componentType"
            }
          },
          {
            "name": "isbns",
            "type": "Array",
            "arrayType": "String",
            "joinStrategy": "Comma",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'isbn' || @.namespace == 'eisbn' || @.namespace == 'pisbn')].value"
            }
          },
          {
            "name": "issns",
            "type": "Array",
            "arrayType": "String",
            "joinStrategy": "Comma",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'issn' || @.namespace == 'eissn' || @.namespace == 'pissn')].value"
            }
          },
          {
            "name": "zdbids",
            "type": "Array",
            "arrayType": "String",
            "joinStrategy": "Comma",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'zdb')].value"
            }
          },
          {
            "name": "ezbids",
            "type": "Array",
            "arrayType": "String",
            "joinStrategy": "Comma",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.identifiers[?(@.namespace == 'ezb')].value"
            }
          },
          {
            "name": "publicationDates",
            "type": "DatesDisplay"
          },
          {
            "name": "otherIds",
            "type": "Array",
            "arrayType": "String",
            "joinStrategy": "Comma",
            "value": {
              "type": "HandlebarsEach",
              "templateString": "{{namespaceName}}: {{value}}",
              "values": {
                "type": "access",
                "accessType": "JSONPath",
                "expression": "$.identifiers[?(@.namespace != 'issn' && @.namespace != 'eissn' && @.namespace != 'pissn' && @.namespace != 'isbn' && @.namespace != 'eisbn' && @.namespace != 'pisbn' && @.namespace != 'zdb' && @.namespace != 'ezb')]"
              }
            }
          },
          {
            "name": "publisher",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.publisherName"
            }
          },
          {
            "name": "firstAuthor",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.firstAuthor"
            }
          },
          {
            "name": "firstEditor",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.firstEditor"
            }
          },
          {
            "name": "editionStatement",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.editionStatement"
            }
          },
          {
            "name": "volume",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.volumeNumber"
            }
          },
          {
            "name": "subjects",
            "type": "Array",
            "arrayType": "String",
            "joinStrategy": "Comma",
            "value": {
              "type": "HandlebarsEach",
              "templateString": "{{scheme}}: {{heading}}",
              "values": {
                "type": "access",
                "accessType": "JSONPath",
                "expression": "$.subjects[*]"
              }
            }
          },
          {
            "name": "gokbid",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.id"
            }
          },
          {
            "name": "gokbuuid",
            "type": "String",
            "value": {
              "type": "access",
              "accessType": "JSONPath",
              "expression": "$.uuid"
            }
          }
        ]
      },
      "fetch": {
        "baseUrl": "https://gokbt.gbv.de/gokb/api/find",
        "mapping": {
          "results": "records",
          "totalRecords": "count"
        },
        "search": {
          "type": "queryDropdown",
          "options": [
            {
              "name": "keyword",
              "type": "Handlebars",
              "parameter": "q={{string}}"
            },
            {
              "name": "nameAndAltNames",
              "type": "Handlebars",
              "parameter": "label={{string}}"
            },
            {
              "name": "name",
              "type": "Handlebars",
              "parameter": "name={{string}}"
            },
            {
              "name": "altname",
              "type": "Handlebars",
              "parameter": "altname={{string}}"
            },
            {
              "name": "identifiers",
              "type": "Handlebars",
              "parameter": "identifier={{string}}"
            },
            {
              "name": "eisbn",
              "type": "Handlebars",
              "parameter": "identifier=eisbn,{{string}}"
            },
            {
              "name": "isbn",
              "type": "Handlebars",
              "parameter": "identifier=isbn,{{string}}"
            },
            {
              "name": "eissn",
              "type": "Handlebars",
              "parameter": "identifier=eissn,{{string}}"
            },
            {
              "name": "issn",
              "type": "Handlebars",
              "parameter": "identifier=issn,{{string}}"
            },
            {
              "name": "ezb",
              "type": "Handlebars",
              "parameter": "identifier=ezb,{{string}}"
            },
            {
              "name": "zdb",
              "type": "Handlebars",
              "parameter": "identifier=zdb,{{string}}"
            },
            {
              "name": "uuid",
              "type": "Handlebars",
              "parameter": "uuid={{string}}"
            },
            {
              "name": "gokbId",
              "type": "Handlebars",
              "parameter": "id={{string}}"
            },
            {
              "name": "authorEditor",
              "type": "Handlebars",
              "parameter": "q={{string}}&qfields=firstAuthor&qfields=firstEditor"
            }
          ]
        },
        "filters": [
          {
            "name": "type",
            "filterPath": "componentType",
            "type": "Enum",
            "enumValues": [
              {
                "name": "all",
                "value": "Title",
                "default": false
              },
              {
                "name": "book",
                "value": "Book",
                "default": false
              },
              {
                "name": "database",
                "value": "Database",
                "default": false
              },
              {
                "name": "journal",
                "value": "Journal",
                "default": false
              },
              {
                "name": "other",
                "value": "Other",
                "default": false
              }
            ]
          }
        ],
        "actions": {},
        "pagination": {
          "type": "offset"
        }
      }
    },
    "view": {
      "fetch": {
        "baseUrl": "https://gokbt.gbv.de/gokb/api/find/",
        "mapping": {
          "data": "records"
        }
      },
      "display": {
        "title": "GOKb Search Result jsonpATH",
        "icon": "book",
        "renderStrategy": {
          "type": "sections",
          "values": [
            {
              "name": "info",
              "collapsable": "false",
              "renderStrategy": {
                "type": "rows",
                "values": [
                  {
                    "type": "row",
                    "colCount": "1",
                    "values": [
                      {
                        "type": "heading",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.name"
                        }
                      }
                    ]
                  },
                  {
                    "name": "metadata",
                    "collapsable": "false",
                    "renderStrategy": {
                      "type": "metadata",
                      "createdBy": {
                        "type": "access",
                        "accessType": "JSONPath",
                        "expression": "$.title"
                      },
                      "lastUpdated": {
                        "type": "access",
                        "accessType": "JSONPath",
                        "expression": "$.title"
                      }
                    }
                  },
                  {
                    "type": "row",
                    "colCount": "3",
                    "values": [
                      {
                        "type": "keyValue",
                        "name": "publicationType",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.componentType"
                        }
                      },
                      {
                        "name": "firstAuthor",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.firstAuthor"
                        }
                      },
                      {
                        "name": "firstEditor",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.firstEditor"
                        }
                      }
                    ]
                  },
                  {
                    "type": "row",
                    "colCount": "4",
                    "values": [
                      {
                        "name": "dateFirstOnline",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.firstAuthor"
                        }
                      },
                      {
                        "name": "dateFirstInPrint",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.firstEditor"
                        }
                      },
                      {
                        "name": "publishedFrom",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.firstEditor"
                        }
                      },
                      {
                        "type": "keyValue",
                        "name": "publishedTo",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.componentType"
                        }
                      }
                    ]
                  },
                  {
                    "type": "row",
                    "colCount": "3",
                    "values": [
                      {
                        "name": "volume",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.volumeNumber"
                        }
                      },
                      {
                        "name": "edition",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.editionStatement"
                        }
                      },
                      {
                        "name": "publisher",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.publisherName"
                        }
                      }
                    ]
                  },
                  {
                    "type": "row",
                    "colCount": "2",
                    "values": [
                      {
                        "name": "gokbId",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.id"
                        }
                      },
                      {
                        "name": "gokdUuid",
                        "type": "keyValue",
                        "value": {
                          "type": "access",
                          "accessType": "JSONPath",
                          "expression": "$.uuid"
                        }
                      }
                    ]
                  }
                ]
              }
            }
          ]
        }
      }
    }
  }
}
